{% extends 'AppBundle::page.html.twig' %}

{% block titre %}Modification des attributs d'un utilisateur{% endblock %}

{% block body %}
 
    {% if app.session.flashbag.has('flash-notice') %}
        <center>
            <div class="ui-state-highlight ui-button ui-corner-all" onclick="$(this).remove();" style="min-width:600px;padding:15px;margin:10px;">
                {% for flashMessage in app.session.flashbag.get('flash-notice') %}
                    <p>{{ flashMessage }}</p>
                {% endfor %}
            </div> 
        </center>
    {% endif %}
    
    {% set hilightColor='#C7FE74' %}

    <br>    
    <h3>Appartenances de l'utilisateur : {{user.displayname}}, uid = {{user.uid}}</h3>
    <br>
    <div>
    <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;" 
        onclick="loadPage('{{ path('group_search', { 'opt': 'add', 'cn': 0, 'uid' : user.uid}) }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/add-1.png')}}" />&nbsp;Ajouter un groupe&nbsp;</button>       
    </div>
    <br>

    <form class="amuForms" id="_ajxFromModifier">    
        <table id="memb" class="ui-widget-content dataTable TabInfos" filter="25">
            <thead>
                <tr>
                    <th>Nom du groupe</th>
                    <th>Membre</th>
                    <th>Administrateur</th> 
                </tr>
            </thead>
            <tbody>
                {# itère sur chaque membership existant et affiche les champs : name, memberof et adminof #}
                {% for m in form.memberships  %}
                    <tr>
                    {# Droits admin sur les groupes concernés #}
                    {% if user.memberships[loop.index0].droits == 'Modifier' %}
                        <td style="vertical-align: middle;"> {{ user.memberships[loop.index0].groupname }} </td>
                        <td style="vertical-align: middle;"> {{ form_widget(m.memberof) }} </td>
                        <td style="vertical-align: middle;"> {{ form_widget(m.adminof) }} </td>
                          
                    {% else %}
                        {# Droits visu seulement pour la DOSI, sinon, on ne voit rien #}
                        {% if user.memberships[loop.index0].droits == 'Voir' %}
                            <td style="vertical-align: middle;"> {{ user.memberships[loop.index0].groupname }} </td>
                            <td style="vertical-align: middle;"> <input type = 'checkbox' disabled="disabled" {% if m.memberof == 1 %} checked='checked' {% endif %} /> </td>
                            <td style="vertical-align: middle;"> <input type = 'checkbox' disabled="disabled" {% if m.adminof == 1 %} checked='checked' {% endif %} /> </td>
                            
                        {% endif %}    
                    {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
        <p>
            {#    <button id="button_val" type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
                    onclick="loadPage('{{ path('user_update', { 'uid': user.uid }) }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/save-2.png')}}" />&nbsp;Enregistrer les modifications&nbsp;</button> #}
            <button id="button_val" type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"> <img align="absmiddle" src="{{asset('bundles/app/images/ico/16/valid.png')}}" />&nbsp;Valider les changements de droits&nbsp;</button> 
            <span class="record_actions"></span>
            <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;" onclick="loadPage('{{ path('accueil') }}');" ><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/cancel.png')}}" />&nbsp;Annuler&nbsp;</button>
            
        </p>
        
        <div style="display: none;"> {{ form_rest(form) }}</div> 
        {# ... #}
    </form>
    
    <br>
    
    <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
	onclick="loadPage('{{path('user_search') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/app/images/ico/32/prev-green.png') }}" />&nbsp;Retour à la recherche&nbsp;
    </button>
  
    {# Ajout d'une fonction javascript pour gérer les lignes cachées de la datatable #}
    <script type="text/javascript" src="http://cdn.datatables.net/plug-ins/1.10.7/api/fnGetHiddenNodes.js"/>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#button_val').click( function () {
                oTable = $('#memb').dataTable();
                $(oTable.fnGetHiddenNodes()).appendTo(this);
                loadPage('{{ path('user_update', { 'uid': user.uid }) }}', $('#_ajxFromModifier').serializeArray());
            } );
        } );
    </script>
   

{% endblock %}



