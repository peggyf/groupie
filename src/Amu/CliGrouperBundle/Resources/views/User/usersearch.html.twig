{% extends 'AppBundle::page.html.twig' %}

{% block titre %}Recherche d'utilisateur{% endblock %}

{% block body %}
{% if app.session.flashbag.has('flash-notice') %}
    <center>
        <div class="ui-state-highlight ui-button ui-corner-all" onclick="$(this).remove();" style="min-width:600px;padding:15px;margin:10px;">
            {% for flashMessage in app.session.flashbag.get('flash-notice') %}
                <p>{{ flashMessage }}</p>
            {% endfor %}
        </div>
    </center>
{% endif %}
<div style="display:-moz-grid-line;">
<div style="float:left;clear:left;width: 469px;">
<form class="amuForms" id="_ajxFromModifier">
    
    <h2> Recherche individuelle </h2>
    <br>
    <h3> Veuillez indiquer l'identifiant ou le nom de la personne à rechercher. </h3>
    <br>  
    <br>
    
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div>
        {{ form_label(form.uid) }}
        {{ form_errors(form.uid) }}
        {{ form_widget(form.uid) }}
    </div>
    
    <br>
    
    <div>
        {{ form_label(form.sn) }}
        {{ form_errors(form.sn) }}
        {{ form_widget(form.sn) }}
        
        {{ form_label(form.exacte) }}
        {{ form_errors(form.exacte) }}
        {{ form_widget(form.exacte) }}
    </div>

    <br>
    
    <p>
     <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
	onclick="loadPage('{{ path('user_search', { 'opt': opt, 'cn' : cn, 'liste' : liste }) }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/search-3.png')}}" />&nbsp;Rechercher&nbsp;</button>
     <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;" onclick="loadPage('{{ path('accueil') }}');" ><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/cancel.png')}}" />&nbsp;Annuler&nbsp;</button>   
     <span class="record_actions"></span>
    </p>
    
    {{ form_end(form) }}
    
</form>
</div>   

{% if opt=='add' %}   
    <div style="float:right;clear:right;width: 469px;">
        <h2> Ajout de personnes en masse </h2>
        <br>   
        <h3> Pour ajouter plusieurs membres en même temps, cliquez sur ce bouton. </h3>
        <br>    
        <br>
        <center>
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
            onclick="loadPage('{{ path('user_multiple', { 'opt': opt, 'cn' : cn, 'liste' : liste }) }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{asset('bundles/app/images/ico/16/usergroup-add.png')}}" />&nbsp;Ajouts multiples&nbsp;</button>
        </center>
    </div>
{% endif %}

</div>    
<p style='font-size:10px;'> 
    <img align="absmiddle" src="{{ asset('bundles/app/images/ico/18/warning.gif') }}" />
    L'autocomplétion fournit un maximum de 20 résultats. 
   <br>Si vous ne trouvez pas dans la liste la personne que vous recherchez, tapez le nom dans le formulaire puis cliquez sur le bouton "Rechercher". 
</p>
<br>

{% if opt=='add' %}
    <br>
    {% if liste == 'mesgroupes' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
            onclick="loadPage('{{ path('mes_groupes') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/app/images/ico/32/prev-green.png') }}" />&nbsp;Retour à la liste des groupes&nbsp;
        </button>
        <br>
    {% endif %}
    
    {% if liste == 'recherchegroupe' %}
        <button type="button" class="ui-button ui-widget-content ui-corner-all" style="padding:5px;"  
            onclick="loadPage('{{path('group_display') }}', $('#_ajxFromModifier').serializeArray());"><img align="absmiddle" src="{{ asset('bundles/app/images/ico/32/prev-green.png') }}" />&nbsp;Retour à la liste des groupes&nbsp;
        </button>
        <br>
    {% endif %}
{% endif %}



<script type="text/javascript">       
$('#usersearch_uid').autocomplete({
    source : function(requete, reponse){
            var motcle = $('#usersearch_uid').val();                       
            var DATA = 'motcle=' + motcle;
            
            $.ajax({
                    type:"POST",
                    url : "{{ path('ajax_uidcompletlist') }}",
                    dataType : 'json',
                    data : DATA, 

                    success : function(donnee){
                        reponse($.map(donnee, function(object){ 
                            return object;
                        }));
                    }            
                });
            },
    select : function(event, ui) {
        $('#usersearch_uid').val(ui.item.value);
        loadPage('{{ path('user_search', { 'opt': opt, 'cn' : cn, 'liste': liste }) }}', $('#_ajxFromModifier').serializeArray());
    }        
});  

$('#usersearch_sn').autocomplete({
    source : function(requete, reponse){ 
            var motcle = $('#usersearch_sn').val(); 
            var rech = 0;
            if($('#usersearch_exacte').is(':checked')){
                rech = 1;
            }
            var DATA = 'motcle=' + motcle + '&exacte=' + rech;
            
            $.ajax({
                    type:"POST",
                    url : "{{ path('ajax_sncompletlist') }}",
                    dataType : 'json',
                    data : DATA, 

                    success : function(donnee){
                         reponse($.map(donnee, function(object){ 
                            return {
                                label: object.label,
                                value: function ()
                                {
                                    if ($(this).attr('id') == 'value')
                                    {
                                            $('#usersearch_sn').val(object.value);
                                            return object.uid;
                                    }
                                    else
                                    {
                                            $('#usersearch_uid').val(object.uid);
                                            return object.value;
                                    }
                                }
                            }
                        }));    
                    }            
                });
            },
    select : function(event, ui) {
        $('#usersearch_sn').val(ui.item.value);
        loadPage('{{ path('user_search', { 'opt': opt, 'cn' : cn, 'liste': liste }) }}', $('#_ajxFromModifier').serializeArray());
    } 
}); 
    
</script>   
    
{% endblock %}